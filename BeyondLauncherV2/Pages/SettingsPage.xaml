<Page x:Class="BeyondLauncherV2.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:BeyondLauncherV2.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="760" d:DesignWidth="1290"
      Title="SettingsPage">

    <Grid>
        <ui:Button CornerRadius="50" Height="650" Width="880" Margin="32,0,0,60" VerticalAlignment="Bottom"/>
        <Label Content="Settings" FontSize="40px" FontFamily="Segoe UI Bold" HorizontalAlignment="Left" Margin="66,80,0,0" VerticalAlignment="Top" Height="73" Width="314"/>
        <ui:ToggleSwitch x:Name="RPCSwitch" IsChecked="True" FontSize="20px" Content="Enable RPC" Margin="66,153,0,0" VerticalAlignment="Top" Height="28" Width="157" Checked="RPCSwitch_Checked" Unchecked="RPCSwitch_Unchecked" Loaded="RPCSwitch_Loaded" Click="RPCSwitch_Click"/>

    </Grid>
</Page>
